#::::::::::::::::::::::::::::::: Out system :::::::::::::::::::::::::::::::::::#

set $Locker i3lock -c #000000 && sleep 1
set $mode_system System:   L :  | S :  | P :  | R :  | E :   

mode "$mode_system" {
    bindsym l exec --no-startup-id mylock, mode "default"
    bindsym s exec --no-startup-id systemctl suspend && mylock, mode "default
    bindsym p exec --no-startup-id systemctl poweroff -i, mode "default"
    bindsym r exec --no-startup-id systemctl reboot, mode "default"
    bindsym e exec --no-startup-id i3-msg exit, mode "default"

#   back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+x mode "$mode_system"

#:::::::::::::::::::::::::::::::: Scratchpad :::::::::::::::::::::::::::::::::#
bindsym $mod+Shift+minus move scratchpad
bindsym $mod+minus scratchpad show

#:::::::::::::::::::::::::::::::: Windows :::::::::::::::::::::::::::::::::::::#
# set specific windows to floating mode
for_window [class="Lxappearance"]                   floating enable
for_window [class="Boostnote"]                      floating enable


# Pulse Audio controls
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume 0 +5% #increase sound volume
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume 0 -5% #decrease sound volume
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute 0 toggle # mute sound

# Sreen brightness controls
# increase screen brightness
bindsym XF86MonBrightnessUp exec xbacklight -inc 10 && notify-send $(echo "brightness inc")
# decrease screen brightness
bindsym XF86MonBrightnessDown exec xbacklight -dec 10

# Media player controls
# bindsym XF86AudioPause exec playerctl play-pause
# bindsym XF86AudioNext exec playerctl next
# bindsym XF86AudioPrev exec playerctl previous
bindsym XF86AudioPause exec mpc toggle
bindsym XF86AudioNext exec mpc next
bindsym XF86AudioPrev exec mpc previous

# Screenshot
bindsym Print exec notify-send "Screenshot copied to clipboard" && xfce4-screenshooter -f -c
# touch to tap
exec synclient TapButton1=1
# repeat rate
exec xset r rate 300 30
# clipboard manager
exec --no-startup-id xfce4-clipman
# set background
exec_always feh --bg-scale /home/shaurya/Desktop/wallpaper.png
# Network manager tray icon
exec --no-startup-id nm-applet
# Bar
exec_always --no-startup-id ~/.config/polybar/launch.sh
#Compton
exec --no-startup-id compton -b --vsync opengl 
# Replace caps with control
exec setxkbmap -option ctrl:nocaps
